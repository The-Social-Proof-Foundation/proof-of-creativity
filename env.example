# Database Configuration
DB_DSN=postgresql://user:password@localhost:5432/proof_of_creativity

# Redis Configuration (for caching and fingerprint storage)
REDIS_URL=redis://localhost:6379/0

# Storage Configuration
USE_GCS=true
USE_WALRUS=false
GCS_BUCKET_NAME=proof-of-creativity-bucket
WALRUS_ENDPOINT=https://api.walrus.xyz

# Vector Database Settings
VECTOR_DB=timescale

# Google Cloud Storage (if using GCS)
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=true

# Logging
LOG_LEVEL=INFO

# Security
SECRET_KEY=your-secret-key-here

# Media Processing
MAX_FILE_SIZE=100000000  # 100MB in bytes
TEMP_DIR=/tmp/proof-of-creativity

# AI Model Configuration
CLIP_MODEL_NAME=openai/clip-vit-base-patch32
EMBEDDING_DIMENSION=512

# Audio Processing
AUDIO_SAMPLE_RATE=8000
KEYFRAME_EXTRACTION_RATE=1  # frames per second 